@model IEnumerable<Anime_Streaming_Platform.Models.Anime>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Dashboard.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.AnimeName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AnimeDescription)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AnimeStudio)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Image)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.AnimeName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AnimeDescription)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AnimeStudio)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Image)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.AnimeId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.AnimeId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.AnimeId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
