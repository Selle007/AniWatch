@model Anime_Streaming_Platform.ViewModels.AnimeCategoryViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Dashboard.cshtml";
}

<h1>Edit</h1>

<h4>AnimeCategories</h4>
