                <label class="control-label">Anime Name</label>
                <br/>
                @Html.DropDownListFor(model => model.AnimeCategories.AnimeId, new SelectList(Model.Animes, "AnimeId", "AnimeName"), new { @class = "form-control valid" })
            </div>
            <div class="form-group">
                <label class="control-label">Category Name</label>
                 <br/>
            @Html.DropDownListFor(model => model.AnimeCategories.CategoryId, new SelectList(Model.Categories, "CategoryId", "CategoryName"), new { @class = "form-control valid" })
            </div>
            <div class="form-group">
            
                    <input type="submit" value="Save" class="btn btn-primary" />
            
            </div>
        </div>
    </div>
}
