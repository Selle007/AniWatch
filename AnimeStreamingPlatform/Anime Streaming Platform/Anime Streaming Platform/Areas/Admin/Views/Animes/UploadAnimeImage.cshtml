@model Anime_Streaming_Platform.Models.Anime
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "UploadAnimeImage";
    Layout = "~/Views/Shared/_Dashboard.cshtml";
}

<h1>UploadAnimeImage</h1>

<h4>Anime</h4>
<hr />
<div class="row">
    <div class="col-md-4">
         <dl>
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.AnimeName)
            </dt
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.AnimeName)
            </dd>
        </dl>
       <form method="post" asp-controller="Animes" asp-action="UploadAnimeImage" enctype="multipart/form-data">
            
