@using Anime_Streaming_Platform.Models
@model Anime_Streaming_Platform.ViewModels.MangaAnimeViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Dashboard.cshtml";
}

<h1>Edit</h1>

<h4>Manga</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="MangaId" />
            <div class="form-group">
                <label asp-for="MangaName" class="control-label"></label>
                @Html.EditorFor(model=> model.Mangas.MangaName, new { htmlAttributes = new { @class = "form-control" } })
            </div>
            <div class="form-group">
                <label asp-for="MangaDesc" class="control-label"></label>
                @Html.EditorFor(model=> model.Mangas.MangaDesc, new { htmlAttributes = new { @class = "form-control" } })
            </div>
            <div class="form-group">
                <label asp-for="AnimeId" class="control-label"></label>
                @Html.DropDownListFor(model => model.Mangas.AnimeId, new SelectList(Model.Animes, "AnimeId", "AnimeName"), new { @class = "form-control valid" })
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
