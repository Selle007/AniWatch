@model AniWatch.Models.Manga

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edit</h1>

<h4>Manga</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="MangaId" />
            <div class="form-group">
                <label asp-for="MangaName" class="control-label"></label>
                <input asp-for="MangaName" class="form-control" />
                <span asp-validation-for="MangaName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MangaDesc" class="control-label"></label>
                <input asp-for="MangaDesc" class="form-control" />
                <span asp-validation-for="MangaDesc" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AnimeId" class="control-label"></label>
                <select asp-for="AnimeId" class="form-control" asp-items="ViewBag.AnimeId"></select>
                <span asp-validation-for="AnimeId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
