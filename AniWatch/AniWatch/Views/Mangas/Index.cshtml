@model IEnumerable<AniWatch.Models.Manga>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.MangaName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MangaDesc)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Anime)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.MangaName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MangaDesc)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Anime.AnimeId)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.MangaId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.MangaId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.MangaId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
