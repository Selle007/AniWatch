@model IEnumerable<AniWatch.Models.Episode>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.EpisodeNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EpisodeTitle)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EpisodeUrl)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Anime)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.EpisodeNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EpisodeTitle)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EpisodeUrl)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Anime.AnimeId)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.EpisodeId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.EpisodeId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.EpisodeId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
